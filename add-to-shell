### User Settings ###

# Prefer Clang over GCC 
# https://clang.llvm.org/
export CC=clang
export CXX=clang++

# Python Poetry for project and dependency management
# https://python-poetry.org/
export PATH=$PATH:$HOME/.poetry/bin

# Prefer GraalVM-CE for llvm support and services integration
# https://www.graalvm.org/
export JAVA_HOME=/usr/lib/jvm/graalvm-ce-java11-21.1.0
alias jre8="/usr/lib/jvm/jre1.8.0_291/bin/java" # Only used for the Minion Add-On Manager (https://minion.gg)

# Rust
# https://www.rust-lang.org/
. "$HOME/.cargo/env"

# Haskell
# https://www.haskell.org/
[ -f "$HOME/.ghcup/env" ] && source "$HOME/.ghcup/env" # ghcup-env

# Golang
# https://go.dev/
export PATH=$PATH:/opt/go/bin
export GOPATH=$HOME/Development/Projects/Go

# Zig-A-Zig AHHHH
# https://ziglang.org/
export PATH=$PATH:$HOME/.local/share/zig

# Starship
# https://starship.rs/
eval "$(starship init bash)"
